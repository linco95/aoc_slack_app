{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "fmt": {
    "include": [
      "README.md",
      "datastores",
      "external_auth",
      "functions",
      "manifest.ts",
      "triggers",
      "types",
      "views",
      "workflows"
    ],
    "semiColons": false,
    "lineWidth": 120,
    "indentWidth": 4,
    "singleQuote": true
  },
  "importMap": "import_map.json",
  "lint": {
    "include": [
      "datastores",
      "external_auth",
      "functions",
      "manifest.ts",
      "triggers",
      "types",
      "views",
      "workflows"
    ]
  },
  "lock": false,
  "tasks": {
    "test": "deno test --allow-import=crux.land,deno.land",
    "test:w": "deno task test --watch"
  }
}
